extends ../layout

block content
	.container
		.row
			form#mainForm.form-horizontal(method="post", action="/admin/save")
				input(type="hidden", name="person[_id]", value="#{person._id}")
				.form-group
					label.col-sm-2.control-label(for="inputTitle") 人物名字
					.col-sm-8
						input#inputName.form-control(type="text",name="person[name]",value="#{person.name}")
					.col-sm-2
				.form-group		
					label.col-sm-2.control-label(for="inputDoctor") 图片地址
					.col-sm-8
						input#inputimgUrl.form-control(type="text",name="person[imgUrl]",
						value="#{person.imgUrl}")
					.col-sm-2
				.form-group		
					label.col-sm-2.control-label(for="inputCountry") 详细描述
					.col-sm-8
						input#inputDescription.form-control(type="text",name="person[description]",value="#{person.description}")
					.col-sm-2
				.form-group		
					label.col-sm-2.control-label(for="inputLanguage") 生日
					.col-sm-8
						input#inputBirth.form-control(type="text",name="person[birth]",value="#{person.birth}")
					.col-sm-2
				.form-group		
					label.col-sm-2.control-label(for="inputLanguage") 国籍
					.col-sm-8
						input#inputCountry.form-control(type="text",name="person[country]",value="#{person.country}")
					.col-sm-2		
				.form-group		
					label.col-sm-2.control-label(for="inputPoster") 人物信息
					.col-sm-8
						input#inputOther.form-control(type="text",name="person[other]",value="#{person.other}")
					.col-sm-2
				.form-group
					.col-sm-offset-2.col-sm-10
						a#submit.btn.btn-primary(tabindex="0",role="button",data-toggle="popover",data-trigger="focus",data-title="提示",data-content="111")提交
	script(src="/js/addAndUpdate.js")



